<?xml version="1.0" encoding="UTF-8"?>

<RDF:RDF xmlns:RDF="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
         xmlns:em="http://www.mozilla.org/2004/em-rdf#">

  <RDF:Description about="urn:mozilla:extension:cliqz@cliqz.com">
    <em:updates>
      <RDF:Seq>

        <!-- Each li is a different version of the same add-on -->
        <RDF:li>
          <RDF:Description>
            <em:version>{{ version }}</em:version> <!-- This is the version number of the add-on -->

            <!-- One targetApplication for each application the add-on is compatible with -->
            <em:targetApplication>
              <RDF:Description>
                <em:id>{ec8030f7-c20a-464f-9b0e-13a3a9e97384}</em:id>
                <em:minVersion>2.0</em:minVersion>
                <em:maxVersion>30.*</em:maxVersion>

                <!-- This is where this version of the add-on will be downloaded from -->
                <!-- Not working with CDN. It needs to be a https but our certificate is broken on the CDN. -->
                <em:updateLink>{{download_link}}</em:updateLink>

                <!-- A page describing what is new in this updated version
                <em:updateInfoURL>http://beta.cliqz.com/changelog</em:updateInfoURL>
                -->
              </RDF:Description>
            </em:targetApplication>
          </RDF:Description>
        </RDF:li>

      </RDF:Seq>
    </em:updates>

  </RDF:Description>
</RDF:RDF>
