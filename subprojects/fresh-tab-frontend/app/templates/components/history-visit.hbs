{{#unless hasNoSortedVisits}}
  <button class="delete-visit-btn" {{action "deleteVisit" bubbles=false}}
    {{action "markForDeletion" on="mouseEnter"}} title="delete this page"
    {{action "unMarkForDeletion" on="mouseLeave"}}>
  </button>
{{/unless}}
  {{cliqz-logo model=model.contact.logo tagName="span" class=logoclass}}

  {{#if logoclass}}
    <div>
      <span class="domain">
        {{model.contact.domain}}
      </span>
    </div>
  {{/if}}

  <div style="display: flex; flex: 1;">
    <span class="title" {{action "clickTitle"}}>
      {{#if keyword}}
        <span class="keyword">
          <img src="./assets/images/mag-glass-dark.svg"/>
          {{keyword}}
        </span>
        {{#unless isCliqz}}
        &ndash;
        {{/unless}}
      {{/if}}
      {{#unless isCliqz}}
        {{highlight model.title query}}
      {{/unless}}
    </span>

    <span class="url" {{action "clickUrl"}}>
      {{#unless isCliqz}}
        {{highlight (url model.url) query}}
      {{/unless}}
    </span>

    <span class="visited-at" {{action "clickVisitAt"}}>
      {{#if model.lastVisitedAt}}
        {{#if isHovered}}
          {{moment-format model.lastVisitedAt 'HH:mm LL' }}
        {{else}}
          {{moment-from-now model.lastVisitedAt interval=60000}}
        {{/if}}
      {{/if}}
    </span>
  </div>
