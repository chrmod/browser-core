<div class="article-content">
  <a style="position:relative" href="{{model.url}}" class="topnews news" data-index="{{index}}">
    <div class="clearfix">
      <div extra="logo" class="logo" style="{{model.logo.style}}">{{model.logo.text}}</div>
      <div extra="url" class="url">{{model.displayUrl}}</div>
    </div>

    <div class="newsContent">
      <div extra='title' class='title multiline-ellipsis'>
        {{model.title}}
      </div>
    </div>

    <div extra='description' class='description'>
      <div class="text multiline-ellipsis">
        <p>{{model.description}}</p>
      </div>
    </div>

    <div class="readMore">{{t 'news.read-more'}}</div>

  </a>
</div>