<div
    class="cqz-ticket-offer
            {{#unless call_to_action }}
               cqz-no-call-to-action
            {{/unless }}
            cqz-clear {{ voucher_classes }}"
>
    <div class="cqz-offer-holder" style="background-color: {{ styles.background }}; background-image: url({{ logo_url }});">
        <div class="cqz-logo-holder">
            {{#if logo_url }}
                    <!--<img src="{{ logo_url }}" alt=""/>-->
            {{else if captions }}
                <table class="cqz-offer-captions">
                    <tr>
                        <td>
                            <span>{{ captions.cap1}}</span>
                            <span>{{ captions.cap2}}</span>
                        </td>
                    </tr>
                </table>
            {{/if }}
        </div>

        {{#if call_to_action }}
            <div class="cqz-call-to-action">
                <a href="#{{ call_to_action.url }}"
                   class="cqz-btn"
                   data-cqz-of-btn-id="call-to-action"
                   target="{{ call_to_action.target }}"
                    style="color: {{ styles.call-to-action-color }}; background: {{ styles.call-to-action-bg-color }}">
                    {{ call_to_action.text }}
                </a>
                <a class="cqz-power-by"
                   data-cqz-of-btn-id="more-about-offer"
                   style="color: {{ styles.description-color }}">
                    <i style="margin-top: 0;">
                        <svg id="Layer_1" width="16" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 99.8 99.72"><title>Cliqz logo 2016_2</title><polygon points="80.36 74.39 99.8 67.89 46.08 46 67.97 99.72 74.47 80.28 92.65 98.46 98.54 92.57 80.36 74.39"/><path d="M76.25,106.34a29.4,29.4,0,1,1,29.4-29.4c0,0.18,0,.36,0,0.54l19.27,7.85A49.42,49.42,0,1,0,84.53,125.6l-7.85-19.28Z" transform="translate(-26.88 -27.58)"/></svg>
                    </i>
                    Bereitgestellt von CLIQZ
                </a>
            </div>
        {{/if }}

        <div class="cqz-content-holder">
            <h1 class="cqz-title" style="color: {{ styles.title-color }}">
                {{ title }}
            </h1>

            {{#if code }}
                <div class="cqz-offer-code-holder">
                    <span class="cqz-offer-code-info">Code Copied</span>
                    <span class="cqz-offer-code" data-cqz-of-btn-id="copy-code">{{ code }}</span>
                </div>
            {{/if }}


            <div class="cqz-descr" style="color: {{ styles.description-color }}">
                {{#if conditions }}
                    {{ conditions }} <br>
                {{/if }}
                {{ desc }}
            </div>
            <a href="https://cliqz.com/desktop/cliqz-angebote"
