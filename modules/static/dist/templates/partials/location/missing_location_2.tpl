<div class="location_permission_prompt">
  <div class="loc_permission_prompt_message">
    {{local trans_str.message }}
  </div>
  <div class="loc_permission_prompt_buttons">
    <span class="cqz-btn-error" extra="share-location-never" id="cqz_location_never">
      {{local trans_str.yes }}
    </span>
    <span class="cqz-btn-default cqz_location_once" location_dialogue_step="2" id="cqz_location_once" bm_url="{{ friendly_url }}">
      {{local trans_str.no }}
    </span>
  </div>
</div>
