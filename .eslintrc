{
    "extends": "airbnb",
    "env": {
        "browser": false,
        "commonjs": false,
        "es6": true,
        "mocha": true,
        "node": true,
        "shared-node-browser": true,
        "webextensions": true,
        "worker": true
    },
    "globals": {
        "Components": {},
        "Services": {},
        "dump": {},
        "System": {},
        "Cc": {},
        "Ci": {},
        "Promise": {},
        "setTimeout": {},
        "setInterval": {},
        "clearTimeout": {}
    },
    "rules": {
        "import/no-unresolved": "off",
        "import/no-extraneous-dependencies": 0,
        "import/extensions": "off",
        "class-methods-use-this": "off",
        "no-restricted-syntax": [
            'error',
            'ForInStatement',
            'LabeledStatement',
            'WithStatement',
        ],
        "no-underscore-dangle": "off",
        "comma-dangle": ["error", {
            "arrays": "only-multiline",
            "objects": "only-multiline",
            "functions": "ignore",
        }],
    }
}
